<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.xmut.learningplatform.mapper.workMapper">
    <!--查询学生全部课程下作业-->
    <select id="getWorkByStudentId" resultType="works">
        SELECT `work`.*
        FROM user_course,`work`
        WHERE user_course.courseId=`work`.courseId AND userId = #{userId}
    </select>

    <!--查看指定课程所有作业-->
    <select id="getWorkByCourseId" resultType="works">
        SELECT * FROM `work` WHERE courseId = #{courseId}
    </select>

    <!--查看作业详情-->
    <select id="getWorkByWorkId" resultType="works">
        SELECT * FROM `work` WHERE id = #{workId}
    </select>

    <!--教师布置作业-->
    <insert id="addWork" useGeneratedKeys="true" keyProperty="id" parameterType="works">
        insert into work
        (name,detail,startTime,endTime,courseId,chapterId)
        values
        (#{name},#{detail},#{startTime},#{endTime},#{courseId},#{chapterId})
    </insert>

    <!--删除作业-->
    <delete id="delWork" parameterType="works">
        DELETE
        FROM work
        WHERE courseId=#{courseId} and
        chapterId=#{chapterId}
    </delete>

    <!--教师修改作业-->
    <update id="editWork" parameterType="works">
        UPDATE `work`
        SET `name`=#{name},
        detail=#{detail},
        startTime=#{startTime},
        endTime=#{endTime},
        courseId=#{courseId},
        chapterId=#{chapterId}
        WHERE id=#{id}
    </update>

    <!--获取学生提交的作业-->
    <select id="getWorkId" resultType="java.lang.Integer">
        select id
        FROM `work`
        WHERE courseId=#{courseId} and chapterId=#{chapterId}
    </select>
    <select id="getSubmitWork" resultType="userWork">
        select *
        FROM user_work
        <where>
            <if test="workId !='' and workId != null">
              and  workId = #{workId}
            </if>
            <if test="userId !='' and userId != null">
                and  workId = #{userId}
            </if>
        </where>
    </select>

    <!--模糊-->
    <select id="getWorkByBlur" resultType="works">
        SELECT *
        FROM `work`
        WHERE name LIKE concat('%',#{name},'%')
    </select>
    <!--作业状态-->
    <select id="getWorkStatus" resultType="userWork">
        SELECT workId,userId,upFilePath,`comment`
        FROM user_work
        WHERE workId=#{workId} AND userId=#{userId}
    </select>

    <!--作业评分-->
    <update id="correctWork">
        UPDATE user_work
        SET score = #{score},
        feedback =  #{feedback},
        WHERE workId = #{workId} AND userId = #{userId}
    </update>

    <!--学生交作业-->
    <insert id="doWork">
        INSERT INTO user_work(workId,userId,upFilePath,`comment`)
        VALUE (#{workId},#{userId},#{upFilePath},#{`comment`})
    </insert>
</mapper>